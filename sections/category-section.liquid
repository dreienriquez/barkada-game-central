<style>
  .category-section {
    margin: 4rem 0;
  }

  .section-header {
    margin-bottom: 2rem;
  }

  .section-header.text-left {
    text-align: left;
  }

  .section-header.text-center {
    text-align: center;
  }

  .section-header.text-right {
    text-align: right;
  }

  .category-tabs ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    gap: 1.5rem;
    border-bottom: 2px solid #ccc;
  }

  .category-tabs li {
    padding: 0.5rem 1rem;
    cursor: pointer;
    font-weight: 600;
    border-bottom: 2px solid transparent;
  }

  .category-tabs li.active {
    border-color: #000;
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: flex;
    overflow-x: auto;
    gap: 1.5rem;
  }

  .product-card {
    min-width: 200px;
    flex-shrink: 0;
    border: 1px solid #e0e0e0;
    padding: 1rem;
    position: relative;
    background: #fff;
  }

  .product-card img {
    width: 100%;
    height: auto;
    display: block;
    margin-bottom: 0.5rem;
  }

  .quick-add {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
    background: #000;
    color: #fff;
    border: none;
    padding: 0.5rem;
    font-size: 0.875rem;
    text-transform: uppercase;
    cursor: pointer;
  }

  .product-info {
    margin-top: 1rem;
  }

  .product-info h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .product-info .vendor {
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 0.25rem;
  }

  .price {
    font-weight: bold;
    font-size: 1rem;
  }

  .price .discounted {
    color: #e60023;
    margin-right: 0.5rem;
  }

  .price .original {
    color: #999;
    text-decoration: line-through;
  }

  .badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    margin-top: 0.5rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
  }

  .badge.new {
    background-color: #cceeff;
    color: #0077aa;
  }

  .badge.soldout {
    background-color: #f0f0f0;
    color: #777;
  }
</style>
<div class='category-section'>
  <div class='section-header'>
    <h2>{{ section.settings.title }}</h2>
  </div>

  <div class='category-tabs'>
    <ul>
      {% for block in section.blocks %}
        <li class='tab-link{% if forloop.first %} active{% endif %}' data-tab='tab-{{ block.id }}'>
          {{ block.settings.collection.title }}
        </li>
      {% endfor %}
    </ul>
  </div>

  {% for block in section.blocks %}
    {% assign collection = block.settings.collection %}
    <div id='tab-{{ block.id }}' class='tab-content{% if forloop.first %} active{% endif %}'>
      <div class='product-slider'>
        {% for product in collection.products %}
          {% render 'category-item', product: product %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Category Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop Our Top Categories"
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection Tab",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Category Section",
      "category": "Collections"
    }
  ]
}
{% endschema %}

<div
  class='swiper-slide {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}'
>
  <div class='twcss-flex twcss-flex-col twcss-gap-[2rem]'>
    <img src='{{ collection.featured_image | image_url: width: 800 }}' alt='{{ collection.title }}'>
    <h2 class='twcss-text-4xl twcss-font-bold'>{{ collection.title }}</h2>
    <a href='{{ collection.url }}' class='collection-link twcss-underline'>EXPLORE</a>
  </div>
</div>
